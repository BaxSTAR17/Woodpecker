<div class="headernavbar">
        <img class="logo"src="Logo.png" alt="Pecking..">
        <button class="home">
            <%= link_to "Homeeeeeeeeeeeee", root_path, class: "homelink"%>
        </button>
        <button class="trees"><%= link_to "Treeeeeeeeee", branchlist_path, class: "homelink"%></button>
        <button class="search"></button>
        <button class="user">
            <% if Current.user%>
                <%= link_to Current.user.username, user_path, class: "userlinkage"%>
            <% else %>
                <%= link_to "Log In", root_path, class: "userlinkage"%>
            <% end %>
        </button>
    </div>
    <div class="mainbody">
        <div class="accountface">
                <% if Current.user.image.attached? %>
                    <%= image_tag(Current.user.image, class: "pfp")%>
                <% else %>
                    <img src="Logo.png" class="pfp">
                <% end %>
                <span class="username"><%= Current.user.username %></span>
                <%= form_with model: @user, url: user_path do |form| %>
                    <div>
                    <%= form.file_field :image, accept: 'image/png,image/jpeg', class: "imagefield" %>
                    </div>

                    <div>
                    <%= form.submit "Change Profile Pic", class: "postbtn"%>
                    </div>
                <% end %>
        </div>
        <div class="postcontainer">
            <!-- This is a form layout
            <form action="<?php echo $_SERVER['PHP_SELF'];?>" class="poster" method="POST">
                <textarea name="post" id="" cols="30" rows="10" class="postarea" placeholder="Spam a message!"></textarea>
                <input type="text" class="pecker" name="times" value="1">
                <input type="submit" class="postbtn" value="Peck">
            </form>
            -->
            <div class="postfeed">
                <!-- This is a post layout
                <div class="">
                    <img src="images/Logo.png" alt="Pecking...">
                    <a>User1</a>
                    <p>This is a test post</p>
                </div>
                -->
                <% if Current.user.pecks %>
                <% @pecks = Peck.where(user_id: Current.user.id, tree: "Main Forest")%>
                <% @pecks.each do |peck| %>
                    <% if !peck.pecks.nil? %>
                        <% if peck.pecks <= 20 %>
                            <% for i in 1..peck.pecks %>
                                <div>
                                    <img src="Logo.png" alt="Pecking...">
                                    <%= link_to peck.user.username, another_user_path(:vuser => peck.user.username, :vuserid => peck.user.id), class: "a"%>
                                    <p><%= peck.post %></p>
                                </div>
                            <% end %>
                        <% end %>
                    <% end %>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="footerbar">
        <%= link_to "Home Forest", dashboard_path, class: "currenttree"%>
        <button class="currenttree">Find other users</button>
