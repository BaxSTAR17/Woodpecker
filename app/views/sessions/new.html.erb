<style>
    body {
        background-image: url(tree.png);
        background-repeat: no-repeat;
        background-position: center;
        background-position-y: 5px;
        background-size: 800px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding-top: 200px;
    }
    h1 {
        font-family: Tahoma;
        font-size: 40px;
        color: white;
    }
    .emailcontainer {
        color: white;
        font-family: Tahoma;
        display: flex;
        gap: 99px;
    }
    .passwordcontainer {
        color: white;
        font-family: Tahoma;
        display: flex;
        gap: 71px;
    }
    .login {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }
    .logbtn {
        border: none;
        border-radius: 40px;
        background-color: darkred;
        border: 2px solid white;
        color: white;
        font-family: Tahoma;
        font-weight: 750;
        width: 150px;
        height: 50px;
        text-align: center;
        transition: background-color 0.5s ease-out;
        transition: color 0.3s ease-out;
        text-decoration: none;
    }
    .logbtn:hover {
        background-color: white;
        color: darkred;
    }
</style>

<h1>Log In</h1>

<%= form_with model: @user, url: login_path do |form| %>
    <div class="emailcontainer">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "shikhbuer@femail.com" %>
    </div>
    <div class="passwordcontainer">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="login">
        <%= form.submit "Log In", class: "logbtn" %>
    </div>

<% end %>