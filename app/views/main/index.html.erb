<style>

    .maincontainer {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: right;
        margin-top: auto;
        gap: 20px;
    }
    .welcome {
        font-family: tahoma;
        font-weight: 770;
        color: darkred;
        display: flex;
        flex-direction: column;
        font-size: 30px;
        text-align: center;
        justify-content: center;
    }
    .loginpanel {
        margin-top: auto;
        border-radius: 15px;
        width: 1000px;
        height: 700px;
        background-color: darkred;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    .slogan {
        padding-top: 10px;
        font-size: 15px;
        font-family: cursive;
    }
    .logintitle {
        color: white;
        font-family: Impact;
        font-size: 40px;
    }
    .loginbtn {
        color: white;
        height: 50px;
        width: 400px;
        text-align: center;
        font-size: 35px;
        font-family: tahoma;
        border: 2px solid white;
        border-radius: 30px;
        transition: background-color 0.5s ease-out;
        transition: color 0.3s ease-out;
        text-decoration: none;
    }
    .signbtn {
        color: white;
        height: 50px;
        width: 400px;
        text-align: center;
        font-size: 35px;
        font-family: tahoma;
        border: 2px solid white;
        border-radius: 30px;
        transition: background-color 0.5s ease-out;
        transition: color 0.3s ease-out;
        text-decoration: none;
    }
    .logoutbtn {
        background-color: darkred;
        color: white;
        height: 50px;
        width: 400px;
        text-align: center;
        font-size: 35px;
        border: 2px solid white;
        border-radius: 30px;
        transition: background-color 0.5s ease-out;
        transition: color 0.3s ease-out;
        text-decoration: none;
    }
    .dashbtn {
        background-color: darkred;
        color: white;
        height: 50px;
        width: 400px;
        text-align: center;
        font-size: 35px;
        font-family: tahoma;
        border: 2px solid white;
        border-radius: 30px;
        transition: background-color 0.5s ease-out;
        transition: color 0.3s ease-out;
        text-decoration: none;
    }
    .loginbtn:hover {
        background-color: white;
        color: darkred;
    }
    .signbtn:hover {
        background-color: white;
        color: darkred;
    }
    .logoutbtn:hover {
        background-color: white;
        color: darkred;
    }
    .dashbtn:hover {
        background-color: white;
        color: darkred;
    }
</style>

<div class="maincontainer">
    <div class="welcome">
        <span class="welcometitle">Welcome to</span>
        <img class="logo" src="Fulllogo.png" placeholder="Pecking...">
        <span class="slogan">Be repeatedly informed!</span>
    </div>
    <div class="loginpanel">
        <span class="logintitle">Log In to start!</span>
        <% if Current.user%>
            <%= link_to "Main Forest", dashboard_path, class: "dashbtn" %>
            <%= button_to "Logout", logout_path, class: "logoutbtn", method: :delete %>
        <% else %>
            <%= link_to "Login", login_path, class: "loginbtn" %>
            <%= link_to "Sign Up", sign_up_path, class: "signbtn"%>
        <% end %>
    </div>
</div>

